---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-white text-[#111] antialiased selection:bg-black selection:text-white flex flex-col min-h-screen">
		<Header />
		
		<main class="flex-grow w-full max-w-[1024px] mx-auto px-6 md:px-12 py-16 md:py-24">
			<div class="mb-20 flex flex-col items-start justify-start text-left border-b border-gray-100 pb-12">
				<h1 class="text-3xl md:text-5xl font-bold tracking-tight mb-4 text-[#111] leading-tight">
					Welcome to Zhuocheng'Log
				</h1>
				<p class="text-[17px] md:text-lg text-gray-500 font-normal leading-relaxed">
					Documenting my learning notes, thoughts, and gallery in this space.
				</p>
			</div>

			<section>
				<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-16">
					{
						posts.map((post) => (
							<li class="group cursor-pointer">
								<a href={`/blog/${post.id}/`} class="block no-underline">
									{post.data.heroImage && (
										<div class="w-full aspect-square mb-5 overflow-hidden bg-gray-50 rounded-md ring-1 ring-gray-100">
											<Image 
												width={800} 
												height={800} 
												src={post.data.heroImage} 
												alt={post.data.title}
												class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 filter group-hover:contrast-[1.1]"
											/>
										</div>
									)}
									<div class="flex flex-col gap-1.5">
										<h4 class="text-[22px] font-semibold tracking-tight text-[#111] leading-[1.3] group-hover:text-blue-600 transition-colors">
											{post.data.title}
										</h4>
										<p class="text-[14px] text-gray-500 font-mono mt-0.5">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
