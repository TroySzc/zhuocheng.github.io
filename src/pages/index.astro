---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-white text-[#111] antialiased selection:bg-black selection:text-white flex flex-col min-h-screen">
		<Header />
		
		<main class="flex-grow w-full max-w-[1200px] mx-auto px-6 md:px-12 py-16 md:py-24">
			<div class="mb-20">
				<h1 class="text-4xl md:text-6xl font-bold tracking-tighter mb-4 text-black">日常碎碎念</h1>
				<p class="text-xl md:text-2xl text-gray-500 font-light">极简主义与抽象画廊的碰撞。</p>
			</div>

			<section>
				<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-16">
					{
						posts.map((post) => (
							<li class="group cursor-pointer">
								<a href={`/blog/${post.id}/`} class="block no-underline">
									{post.data.heroImage && (
										<div class="w-full aspect-[4/3] mb-6 overflow-hidden bg-gray-50">
											<Image 
												width={800} 
												height={600} 
												src={post.data.heroImage} 
												alt={post.data.title}
												class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 filter group-hover:contrast-125"
											/>
										</div>
									)}
									<div class="flex flex-col gap-2">
										<h4 class="text-2xl font-bold tracking-tight text-black leading-[1.2] group-hover:text-gray-600 transition-colors">
											{post.data.title}
										</h4>
										<p class="text-sm text-gray-500 font-mono">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
