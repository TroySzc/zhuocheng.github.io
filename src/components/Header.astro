---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="py-6 px-6 md:px-12 w-full max-w-[1200px] mx-auto bg-white flex items-center justify-between z-10 sticky top-0 bg-opacity-90 backdrop-blur-sm">
	<nav class="w-full flex items-center gap-10 md:gap-16">
		<h2 class="text-xl font-bold tracking-tight text-black m-0 shrink-0">
			<a href="/" class="text-black no-underline hover:text-gray-600 transition-colors">
				{SITE_TITLE}
			</a>
		</h2>
		
		<div class="flex items-center gap-6 md:gap-8 flex-1">
			<div class="internal-links flex gap-6 text-sm font-medium">
				<HeaderLink href="/" class="text-black no-underline border-b-2 border-transparent hover:border-black transition-colors pb-1 data-[active=true]:border-black">Home</HeaderLink>
			</div>
			
			<div class="social-links flex items-center gap-4 ml-auto">
				<a href="https://www.xiaohongshu.com/user/profile/your-profile-id" target="_blank" rel="noopener noreferrer" class="text-black hover:text-red-500 transition-colors" title="Follow me on Xiaohongshu">
					<span class="sr-only">小红书 Xiaohongshu</span>
					<!-- Xiaohongshu SVG Icon -->
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 14c-2.21 0-4-1.79-4-4h2c0 1.1.9 2 2 2s2-.9 2-2-1.79-4-4-4V6c3.31 0 6 2.69 6 6s-2.69 6-6 6z"/>
					</svg>
				</a>
			</div>
		</div>
	</nav>
</header>
